            <ImageView
                android:layout_width="60dp"
                android:id="@+id/img"
                android:layout_gravity="fill"
                android:layout_height="100dp"

                android:src="@drawable/ic_highlight_off_black_24dp"
                />

        </LinearLayout>


    </LinearLayout>

